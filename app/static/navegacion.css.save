/**********BARRA DE NAVEGACIÓN**********/
/*Titulo de la aplicacion en navbar*/
#nombreapp {
font-family: Always;
color: white;
font-size: 300%;
padding-top: 25px;
padding-left: 5px !important;
}
/*Color del navigation bar*/
.container-fluid {
background-color: #537098;
}


/*Color del icono de salir*/
.fa {
color: white;
}
/*Icono de salir*/
.salir {
clear: both;
margin-right: 10px !important;
margin-top: 7px !important;
}
/*Lista en navigation bar*/
ul {
list-style-type: none;
overflow: hidden;
padding: 0;
}
/*Icono de salir*/
i {
float: right !important;
padding-top: 20px;
}
/******ICONOS MENU*********/
/* Secciones iconos menu  */
.section {
	clear: both;
	padding: 0px;
	margin: 0px;
}
/*Configuración de columnas iconos menu*/
.col {
	display: block;
	float:left;
	margin: 1% 0 1% 1.6%;
}
.col:first-child { margin-left: 0; }

/*Agrupacion para iconos menu*/
.group:before,
.group:after { content:""; display:table; }
.group:after { clear:both;}
.group { zoom:1; /* For IE 6/7 */ }

/*Rejilla de dos*/
.span_2_of_2 {
	width: 100%;
}
.span_1_of_2 {
	width: 49.2%;
}
/*Sobreescritura de img-responsive para menu de iconos*/
.img-responsive {
display: inline-block !important;
}
/*******BOTONES MENÚ********/
.btnMenu:hover {
opacity: 0.7;
}
/*******STREAMING*****/
#cam2, #cam1 {
font-family: Raleway;
border-style:none;
border-radius: 0;
background:#dc1b6c;
